{
  "name": "ozean",
  "version": "0.11.0",
  "description": "A modern, simple, and high-performance web framework for Bun, inspired by Angular's architecture.",
  "keywords": [
    "ozean",
    "ozeanjs",
    "TypeScript framework",
    "supercharged by Bun",
    "bun",
    "framework",
    "web",
    "typescript",
    "javascript",
    "angular",
    "di",
    "dependency injection",
    "module",
    "Fully Typed",
    "decorator",
    "web server",
    "http",
    "web",
    "server"
  ],
  "author": {
    "name": "Thiti Yamsung",
    "email": "hi@thiti.dev",
    "url": "https://thiti.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ozeanjs/ozean"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "cp ../../README.md .",
    "dev": "bun run examples/example.ts",
    "clean": "rimraf ./dist",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly --declaration --outDir ./dist",
    "build:js": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --sourcemap=external",
    "build": "bun run clean && bun run build:types && bun run build:js",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/reflect-metadata": "^0.1.0",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "find-my-way": "^9.3.0"
  }
}
